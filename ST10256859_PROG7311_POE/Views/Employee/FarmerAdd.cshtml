@model ST10256859_PROG7311_POE.ViewModels.FarmerAddViewModel

<div class="home-logo-container">
    <div class="home-title-group">
        <div class="profile-details">
            <div class="home-welcome-message login-title profile-title-center">
                Add Farmer
            </div>
            <!-- Show validation summary if form is invalid -->
            @if (ViewContext.HttpContext.Request.Method == "POST" && !ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "system-error-summary" })
            }
            <!-- Farmer add form -->
            <form asp-action="FarmerAdd" method="post" class="auth-form">
                <!-- First and last name fields -->
                <div class="form-row">
                    <div class="form-group flex-grow-1">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group flex-grow-1">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <!-- Email and phone number fields -->
                <div class="form-row">
                    <div class="form-group flex-grow-1">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group flex-grow-1">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <!-- Address field -->
                <div class="form-row">
                    <div class="form-group flex-grow-1">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <!-- Password and confirm password fields -->
                <div class="form-row">
                    <div class="form-group flex-grow-1">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group flex-grow-1">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn home-btn-signup">Add Farmer</button>
            </form>
        </div>
    </div>
</div>
